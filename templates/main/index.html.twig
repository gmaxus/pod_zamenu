{% extends 'base.html.twig' %}

{% block title %}Get by vendor code{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <style>
            .example-wrapper {
                margin: 1em auto;
                max-width: 800px;
                width: 95%;
                font: 18px/1.5 sans-serif;
            }

            .example-wrapper code {
                padding: 2px 6px;
            }
        </style>

        <form>
            <div>
                <label for="vendor_code">Vendor code: </label>
                <input type="text" id="vendor_code" name="vendor_code" required="required">
            </div>
            <input type="submit" value="Get data">
        </form>


        {% if answerCode %}
            <hr>
            <h3>Answer code: {{ answerCode }}</h3>
        <p>
            {{ answer }}
        </p>
        {% endif %}
    </div>
{% endblock %}
